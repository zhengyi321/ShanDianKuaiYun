<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_mine_gerenxinxi_weizhi_content_bg"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_mine_gerenxinxi_weizhi_content_item_top_height"
        android:background="@color/color_main_mine_gerenxinxi_weizhi_content_bg"
        android:layout_marginLeft="@dimen/main_mine_gerenxinxi_weizhi_item_margin_left_right_size"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dangqianweizhi"
            android:textColor="@color/color_main_mine_gerenxinxi_weizhi_content_gray_word_textcolor"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lly_main_mine_gerenxinxi_weizhi_get_addr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_mine_gerenxinxi_weizhi_content_item_height"
        android:background="@color/color_main_mine_gerenxinxi_weizhi_content_item_bg"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/rly_main_mine_gerenxinxi_weizhi_get_addr"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/loc" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="6"
            >
            <TextView
                android:id="@+id/tv_main_mine_gerenxinxi_weizhi_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:textColor="@color/color_main_mine_gerenxinxi_weizhi_content_black_word_textcolor"
                android:textSize="@dimen/main_mine_gerenxinxi_weizhi_content_word_size"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </LinearLayout><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_mine_gerenxinxi_weizhi_content_item_top_height"
        android:background="@color/color_main_mine_gerenxinxi_weizhi_content_bg"
        android:layout_marginLeft="@dimen/main_mine_gerenxinxi_weizhi_item_margin_left_right_size"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dangqianweizhi"
            android:textColor="@color/color_main_mine_gerenxinxi_weizhi_content_gray_word_textcolor"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_mine_gerenxinxi_weizhi_content_item_height"
        android:background="@color/color_main_mine_gerenxinxi_weizhi_content_item_bg"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/loc"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="6"
            >
            <EditText
                android:id="@+id/et_main_mine_gerenxinxi_weizhi_addr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/qingtianxiexiangxidizhi"
                android:textColorHint="@color/color_main_mine_gerenxinxi_weizhi_content_gray_word_textcolor"
                android:textColor="@color/color_main_mine_gerenxinxi_weizhi_content_black_word_textcolor"
                android:textSize="@dimen/main_mine_gerenxinxi_weizhi_content_word_size"
                android:layout_centerVertical="true"
                android:background="@null"
                />

        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/bt_main_mine_gerenxinxi_weizhi_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_mine_gerenxinxi_weizhi_submit_height"
        android:layout_marginTop="@dimen/main_mine_gerenxinxi_weizhi_submit_margin_top"
        android:layout_marginLeft="@dimen/main_mine_gerenxinxi_weizhi_submit_margin_left_right_size"
        android:layout_marginRight="@dimen/main_mine_gerenxinxi_weizhi_submit_margin_left_right_size"
        android:background="@drawable/main_mine_gerenxinxi_weizhi_shape"
        android:text="@string/baocun"
        android:textColor="@color/color_main_mine_gerenxinxi_weizhi_content_white_word_textcolor"
        android:textSize="@dimen/main_mine_gerenxinxi_weizhi_content_word_size"

        />
</LinearLayout>