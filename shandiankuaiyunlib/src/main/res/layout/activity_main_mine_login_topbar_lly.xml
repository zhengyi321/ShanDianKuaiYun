<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/main_mine_login_topbar_height">
    <RelativeLayout
        android:id="@+id/rly_main_mine_login_cancel"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/color_main_mine_login_topbar_green_word_bg"
            android:textSize="@dimen/main_mine_login_topbar_word_size"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="2"
        >

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rly_main_mine_login_register_now"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_now"
            android:textColor="@color/color_main_mine_login_topbar_orange_word_bg"
            android:textSize="@dimen/main_mine_login_topbar_word_size"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>