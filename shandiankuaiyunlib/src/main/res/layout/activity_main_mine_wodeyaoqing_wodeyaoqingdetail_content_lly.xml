<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_mine_wodeyaoqing_wodeyaoqingdetail_content_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_mine_wodeyaoqing_wodeyaoqingdetail_content_item_height"
        android:layout_marginTop="@dimen/main_mine_wodeyaoqing_wodeyaoqingdetail_content_item_margin_top_bottom_size"
        android:layout_marginBottom="@dimen/main_mine_wodeyaoqing_wodeyaoqingdetail_content_item_margin_top_bottom_size"
        android:background="@color/color_main_mine_wodeyaoqing_wodeyaoqingdetail_content_item_bg"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yaoqingyi"
                android:textColor="@color/color_main_mine_wodeyaoqing_wodeyaoqingdetail_content_black_word_textcolor"
                android:textSize="@dimen/main_mine_wodeyaoqing_wodeyaoqingdetail_content_word_size"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_main_mine_wodeyaoqing_wodeyaoqingdetail_content_black_word_textcolor"
                android:textSize="@dimen/main_mine_wodeyaoqing_wodeyaoqingdetail_content_word_size"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0积分"
                android:textColor="@color/color_main_mine_wodeyaoqing_wodeyaoqingdetail_content_item_orange_word_textcolor"
                android:textSize="@dimen/main_mine_wodeyaoqing_wodeyaoqingdetail_content_word_size"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_main_mine_wodeyaoqing_wodeyaoqingdetail_content_item_bg"
        >


    </RelativeLayout>
</LinearLayout>