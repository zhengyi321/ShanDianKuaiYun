<?xml version="1.0" encoding="utf-8"?>
<com.zhyan.shandiankuaiyunlib.Widget.ScrollerView.SpringScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/color_main_mine_aboutus_content_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1.3"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/aboutas"
            android:scaleType="fitXY"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/main_mine_aboutus_companyintroduce_content_margin_size"
        >
        <TextView
            android:id="@+id/tv_main_mine_aboutus_companyintroduce_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
            android:textColor="@color/color_main_mine_aboutus_companyintroduce_content_black_word_textcolor"
            android:textSize="@dimen/main_mine_aboutus_content_word_size"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="@dimen/main_mine_aboutus_companyintroduce_content_margin_size"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_main_mine_aboutus_companyintroduce_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_tel"
                android:textColor="@color/color_main_mine_aboutus_content_gray_word_textcolor"
                android:textSize="@dimen/main_mine_aboutus_content_word_size"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_main_mine_aboutus_companyintroduce_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_weixin"
                android:textColor="@color/color_main_mine_aboutus_content_gray_word_textcolor"
                android:textSize="@dimen/main_mine_aboutus_content_word_size"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_main_mine_aboutus_companyintroduce_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_qq"
                android:textColor="@color/color_main_mine_aboutus_content_gray_word_textcolor"
                android:textSize="@dimen/main_mine_aboutus_content_word_size"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_kefuhotline"
                android:textColor="@color/color_main_mine_aboutus_content_red_word_textcolor"
                android:textSize="@dimen/main_mine_aboutus_content_word_size"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            >

        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
</com.zhyan.shandiankuaiyunlib.Widget.ScrollerView.SpringScrollView>