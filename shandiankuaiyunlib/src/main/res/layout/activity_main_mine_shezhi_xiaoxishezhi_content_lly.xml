<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_mine_shezhi_xiaoxishezhi_content_bg"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_width_or_height"
        android:background="@color/color_main_mine_shezhi_xiaoxishezhi_gray_splite_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_mine_shezhi_xiaoxishezhi_content_item_height"
        android:orientation="horizontal"
        android:background="@color/color_main_mine_shezhi_xiaoxishezhi_content_item_bg"
        >
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xiaoxituisong"
                android:textColor="@color/color_main_mine_shezhi_xiaoxishezhi_content_black_word_textcolor"
                android:textSize="@dimen/main_mine_shezhi_xiaoxishezhi_topbar_word_size"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            >

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/push"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_width_or_height"
        android:background="@color/color_main_mine_shezhi_xiaoxishezhi_gray_splite_line"
        />
</LinearLayout>