<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_main_mine_jifenshangcheng_xrv_gv_item"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_main_mine_jifenshangcheng_content_item_bg"
    >

 <!--   android:layout_height="@dimen/main_mine_jifenshangcheng_xrv_gv_item_height"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="6"
        >
        <ImageView
            android:id="@+id/iv_main_mine_jifenshangcheng_xrv_gv_item_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/image1"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="3"
        >
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tv_main_mine_jifenshangcheng_xrv_gv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试1"
            android:textColor="@color/color_main_mine_jifenshangcheng_content_gray_word_textcolor"
            android:textSize="@dimen/main_mine_jifenshangcheng_content_word_size"

            android:layout_centerInParent="true"
            />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="2"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/tv_main_mine_jifenshangcheng_xrv_gv_item_jf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/color_main_mine_jifenshangcheng_content_light_green_word_textcolor"
                android:textSize="@dimen/main_mine_jifenshangcheng_content_word_size"
                android:gravity="center_vertical"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="3dp"
                />
            <RelativeLayout
                android:id="@+id/rly_main_mine_jifenshangcheng_xrv_gv_item_duihuang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_mine_jifenshangcheng_duihuan_red_edge_shape"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="3dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duihuan"
                    android:textColor="@color/color_main_mine_jifenshangcheng_red_edge"
                    android:textSize="@dimen/main_mine_jifenshangcheng_content_word_size"
                    />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>