<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/main_index_peihuozhongxin_topbar_height"
    android:background="@color/color_main_index_peihuozhongxin_topbar_bg"
    >
    <RelativeLayout
        android:id="@+id/rly_main_index_peihuozhongxin_back"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sources_car"
            android:textSize="@dimen/main_index_peihuozhongxin_topbar_title_word_size"
            android:textColor="@color/color_main_index_peihuozhongxin_topbar_title_textcolor"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rly_main_index_peihuozhongxin_change"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/shaixuan"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>