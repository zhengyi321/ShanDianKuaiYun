<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/color_main_release_zhuanxianwuliu_content_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_release_zhuanxianwuliu_photo_pic_height">
    <ImageButton
        android:id="@+id/ib_main_release_zhuanxianwuliu_pic_pick"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/paizhao"
        android:scaleType="fitXY"
        />
        <TextView
            android:id="@+id/tv_main_release_zhuanxianwuliu_selected_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_main_release_zhuanxianwuliu_content_submit_white_word_textcolor"
            android:textSize="@dimen/main_release_zhuanxianwuliu_topbar_title_word_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_release_zhuanxianwuliu_first_item_height"
        android:orientation="vertical"
        android:background="@color/color_main_release_zhuanxianwuliu_content_item_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/main_release_zhuanxianwuliu_item_margin_left_right_size"
            android:layout_marginRight="@dimen/main_release_zhuanxianwuliu_item_margin_left_right_size"
            >
            <LinearLayout
                android:id="@+id/lly_main_release_zhuanxianwuliu_content_begin_place"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/begin_place"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    >
                    <TextView
                        android:id="@+id/tv_main_release_zhuanxianwuliu_content_begin_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_begin_place"
                        android:textColorHint="@color/color_main_release_zhuanxianwuliu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/right_arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_zhuanxianwuliu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_zhuanxianwuliu_content_reach_place"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reach_place"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    >
                    <TextView
                        android:id="@+id/tv_main_release_zhuanxianwuliu_content_reach_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_reach_place"
                        android:textColorHint="@color/color_main_release_zhuanxianwuliu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/right_arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_zhuanxianwuliu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_zhuanxianwuliu_content_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    >
                    <EditText
                        android:id="@+id/et_main_release_zhuanxianwuliu_content_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/input_title"
                        android:textColorHint="@color/color_main_release_zhuanxianwuliu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_zhuanxianwuliu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_zhuanxianwuliu_content_cartype"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/car_type"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    >
                    <TextView
                        android:id="@+id/tv_main_release_zhuanxianwuliu_content_cartype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_car_type"
                        android:textColorHint="@color/color_main_release_zhuanxianwuliu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/right_arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_zhuanxianwuliu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_zhuanxianwuliu_content_carlength"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/car_length"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    >
                    <TextView
                        android:id="@+id/tv_main_release_zhuanxianwuliu_content_carlength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_car_length"
                        android:textColorHint="@color/color_main_release_zhuanxianwuliu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/right_arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_zhuanxianwuliu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_zhuanxianwuliu_content_tel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cal_no"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    >
                    <EditText
                        android:id="@+id/et_main_release_zhuanxianwuliu_content_tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/input_get_phone"
                        android:textColorHint="@color/color_main_release_zhuanxianwuliu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_zhuanxianwuliu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_zhuanxianwuliu_content_lxr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contacter"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    >
                    <EditText
                        android:id="@+id/et_main_release_zhuanxianwuliu_content_lxr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/input_contacter"
                        android:background="@null"
                        android:textColorHint="@color/color_main_release_zhuanxianwuliu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_zhuanxianwuliu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_zhuanxianwuliu_content_addr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addr"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    >
                    <EditText
                        android:id="@+id/et_main_release_zhuanxianwuliu_content_addr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/qingtianxiexiangxidizhijiedaomenpaihao"
                        android:textColorHint="@color/color_main_release_zhuanxianwuliu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_zhuanxianwuliu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_zhuanxianwuliu_content_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/describ"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    >
                    <TextView
                        android:id="@+id/tv_main_release_zhuanxianwuliu_content_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/input_other_request"
                        android:textColorHint="@color/color_main_release_zhuanxianwuliu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_zhuanxianwuliu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_zhuanxianwuliu_content_word_size"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/right_arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_release_zhuanxianwuliu_second_item_height"
        android:layout_marginTop="@dimen/main_release_zhuanxianwuliu_margin_top_size"
        android:background="@color/color_main_release_zhuanxianwuliu_content_item_bg"
        >
        <Button
            android:id="@+id/bt_main_release_zhuanxianwuliu_content_release"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_release_zhuanxianwuliu_submit_height"
            android:text="@string/release"
            android:textColor="@color/color_main_release_zhuanxianwuliu_content_submit_white_word_textcolor"
            android:textSize="@dimen/main_release_zhuanxianwuliu_submit_word_size"
            android:background="@drawable/activity_main_release_zhuanxianwuliu_half_radius_shape"
            android:layout_marginLeft="@dimen/main_release_zhuanxianwuliu_item_margin_left_right_size"
            android:layout_marginRight="@dimen/main_release_zhuanxianwuliu_item_margin_left_right_size"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
</LinearLayout>