<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_index_zhuanxianwuliu_content_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_index_zhuanxianwuliu_tabbar_height"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/rly_main_index_zhuanxianwuliu_content_begin"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_main_index_zhuanxianwuliu_content_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/begin_place"
                android:textSize="@dimen/main_index_zhuanxianwuliu_tabbar_word_size"
                android:textColor="@color/color_main_index_zhuanxianwuliu_tabbar_black_word_textcolor"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/toggle"
                android:drawablePadding="5dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/split_width_or_height"
            android:layout_height="match_parent"
            android:background="@color/color_main_index_zhuanxianwuliu_tabbar_splite_line"
            android:layout_marginTop="@dimen/main_index_zhuanxianwuliu_tabbar_split_margin_top_bottom_size"
            android:layout_marginBottom="@dimen/main_index_zhuanxianwuliu_tabbar_split_margin_top_bottom_size"
            />
        <RelativeLayout
            android:id="@+id/rly_main_index_zhuanxianwuliu_content_reach"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_main_index_zhuanxianwuliu_content_reach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dest_place"
                android:textSize="@dimen/main_index_zhuanxianwuliu_tabbar_word_size"
                android:textColor="@color/color_main_index_zhuanxianwuliu_tabbar_black_word_textcolor"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/toggle"
                android:drawablePadding="5dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/split_width_or_height"
            android:layout_height="match_parent"
            android:background="@color/color_main_index_zhuanxianwuliu_tabbar_splite_line"
            android:layout_marginTop="@dimen/main_index_zhuanxianwuliu_tabbar_split_margin_top_bottom_size"
            android:layout_marginBottom="@dimen/main_index_zhuanxianwuliu_tabbar_split_margin_top_bottom_size"
            />
        <RelativeLayout
            android:id="@+id/rly_main_index_zhuanxianwuliu_content_cartype"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_main_index_zhuanxianwuliu_content_cartype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_type"
                android:textSize="@dimen/main_index_zhuanxianwuliu_tabbar_word_size"
                android:textColor="@color/color_main_index_zhuanxianwuliu_tabbar_black_word_textcolor"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/toggle"
                android:drawablePadding="5dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/split_width_or_height"
            android:layout_height="match_parent"
            android:background="@color/color_main_index_zhuanxianwuliu_tabbar_splite_line"
            android:layout_marginTop="@dimen/main_index_zhuanxianwuliu_tabbar_split_margin_top_bottom_size"
            android:layout_marginBottom="@dimen/main_index_zhuanxianwuliu_tabbar_split_margin_top_bottom_size"
            />
        <RelativeLayout
            android:id="@+id/rly_main_index_zhuanxianwuliu_content_carlength"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_main_index_zhuanxianwuliu_content_carlength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_length"
                android:textSize="@dimen/main_index_zhuanxianwuliu_tabbar_word_size"
                android:textColor="@color/color_main_index_zhuanxianwuliu_tabbar_black_word_textcolor"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/toggle"
                android:drawablePadding="5dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_width_or_height"
        android:background="@color/color_main_index_zhuanxianwuliu_tabbar_splite_line"
        />

    <com.zhyan.shandiankuaiyunlib.Widget.RecyclerView.XRecycleView.XRecyclerView
        android:id="@+id/xrv_main_index_zhuanxianwuliu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.zhyan.shandiankuaiyunlib.Widget.RecyclerView.XRecycleView.XRecyclerView>



</LinearLayout>