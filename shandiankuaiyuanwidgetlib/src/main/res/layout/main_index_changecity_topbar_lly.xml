<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_main_index_changecity_topbar_height"
    android:background="@color/color_main_index_changecity_topbar_bg"
    android:orientation="horizontal"
     >

    <RelativeLayout
        android:id="@+id/rly_main_index_citychange_back"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectcity"
            android:textColor="@color/color_main_index_changecity_topbar_word_white_bg"
            android:textSize="@dimen/dimen_main_index_changecity_topbar_word_size"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

    </RelativeLayout>
</LinearLayout>
