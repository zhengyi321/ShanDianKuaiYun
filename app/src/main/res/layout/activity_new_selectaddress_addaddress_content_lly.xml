<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="30dp"
            >
            <EditText
                android:id="@+id/et_new_selectaddress_keyword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:hint="请输入关键字搜索"
                android:textColorHint="@color/gray"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rly_new_selectaddress_select"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/seach"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_height_or_width"
        android:background="@color/lightgray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="30dp"
            >
            <EditText
                android:id="@+id/et_new_selectaddress_addr_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:hint="请输入详细地址搜索"
                android:textColorHint="@color/gray"
                android:maxLines="2"

                android:imeOptions="actionSearch"
                android:inputType="text|textCapSentences"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rly_new_selectaddress_collect"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/address_collect"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_height_or_width"
        android:background="@color/lightgray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mv_new_selectaddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.baidu.mapapi.map.MapView>
        <ImageButton
            android:id="@+id/ib_new_selectaddress_get_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/search_map"
            android:layout_centerInParent="true"
            />
        <ImageButton
            android:id="@+id/ib_new_selectaddress_get_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/gps_loc"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>
</LinearLayout>