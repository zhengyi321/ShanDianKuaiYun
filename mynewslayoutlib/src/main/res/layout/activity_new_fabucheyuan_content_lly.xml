<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/color_main_release_tezhongyunshu_content_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <LinearLayout
                android:id="@+id/lly_main_release_tezhongyunshu_content_begin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"

                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/begin_place"
                        android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    >
                    <TextView
                        android:id="@+id/tv_main_release_tezhongyunshu_content_begin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请选择一个地址"
                        android:textColorHint="@color/color_main_release_tezhongyunshu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/right_arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_tezhongyunshu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_tezhongyunshu_content_reach"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目的地"
                        android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    >
                    <TextView
                        android:id="@+id/tv_main_release_tezhongyunshu_content_reach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请选择一个地址"
                        android:textColorHint="@color/color_main_release_tezhongyunshu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/right_arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_tezhongyunshu_content_splite_line"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_tezhongyunshu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_tezhongyunshu_content_cartype"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车长"
                        android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    >
                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入车长"
                        android:textColorHint="@color/color_main_release_tezhongyunshu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="米"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_tezhongyunshu_content_splite_line"
                />
            <LinearLayout
                android:id="@+id/lly_main_release_tezhongyunshu_content_carlength"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                >
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车型"
                        android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    >
                    <TextView
                        android:id="@+id/tv_main_release_tezhongyunshu_content_carlength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请选择车型"
                        android:textColorHint="@color/color_main_release_tezhongyunshu_content_gray_word_textcolor"
                        android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                        android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/right_arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_width_or_height"
                android:background="@color/color_main_release_tezhongyunshu_content_splite_line"
                />


        </LinearLayout>



    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            >
            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                    android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="5"
                >
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入联系人姓名"
                    android:textColorHint="@color/color_main_release_tezhongyunshu_content_gray_word_textcolor"
                    android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                    android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_width_or_height"
            android:background="@color/color_main_release_tezhongyunshu_content_splite_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            >
            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                    android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="5"
                >
                <EditText
                    android:id="@+id/et_main_release_tezhongyunshu_content_lxr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入联系人电话"
                    android:background="@null"
                    android:textColorHint="@color/color_main_release_tezhongyunshu_content_gray_word_textcolor"
                    android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                    android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_width_or_height"
            android:background="@color/color_main_release_tezhongyunshu_content_splite_line"
            />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            >
            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发车时间"
                    android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                    android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="5"
                >
                <TextView
                    android:id="@+id/et_main_release_tezhongyunshu_content_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择一个时段"
                    android:textColorHint="@color/color_main_release_tezhongyunshu_content_gray_word_textcolor"
                    android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                    android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_width_or_height"
            android:background="@color/color_main_release_tezhongyunshu_content_splite_line"
            />
        <LinearLayout
            android:id="@+id/lly_main_release_tezhongyunshu_content_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            >
            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                    android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                >
                <EditText
                    android:id="@+id/tv_main_release_tezhongyunshu_content_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="如有需要请务必输入您的留言备注"
                    android:textColorHint="@color/color_main_release_tezhongyunshu_content_gray_word_textcolor"
                    android:textColor="@color/color_main_release_tezhongyunshu_content_black_word_textcolor"
                    android:textSize="@dimen/main_release_tezhongyunshu_content_word_size"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/right_arrow"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>








</LinearLayout>