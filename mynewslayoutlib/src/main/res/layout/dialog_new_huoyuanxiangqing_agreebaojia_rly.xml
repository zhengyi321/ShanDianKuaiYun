<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="4.5"
            android:background="@drawable/dialog_top_radius_bottom_right_angle_white_shape"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/content_detail"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="3.5"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rly_new_hyxq_self_agreebaojia_tel"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/tel"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        >
                        <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@color/black"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rly_new_hyxq_self_agreebaojia_message"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/message"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_new_hyxq_self_agreebaojia_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="侯亮平"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="浙江闪电快运服务有限公司"
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="2dp"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="2"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >

                        <TextView
                            android:id="@+id/tv_new_hyxq_self_agreebaojia_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="320.0"
                            android:textSize="20sp"
                            android:textColor="#ff6a00"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="元"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"

                            />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rly_new_hyxq_self_agreebaojia_agree_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:background="@mipmap/dialog_orange_radius_bottom"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接受报价"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>