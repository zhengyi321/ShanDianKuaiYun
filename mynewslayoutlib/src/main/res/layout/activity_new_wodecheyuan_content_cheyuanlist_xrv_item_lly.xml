<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120.5dp"
    android:id="@+id/lly_new_wodecheyuan_cheyuanlist_xrv_item"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="match_parent">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginTop="2dp"
                android:layout_weight="1.5"
                >
                <LinearLayout
                    android:id="@+id/lly_new_wodecheyuan_cheyuanlist_xrv_item_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"

                    >
                    <ImageView
                        android:id="@+id/iv_new_wodecheyuan_cheyuanlist_xrv_item_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/new_message"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_newmessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有最新报价请立即查看"
                        android:textColor="@color/gray"
                        android:textSize="11sp"


                        />

                </LinearLayout>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f4f4f4"



                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:orientation="horizontal"

                android:layout_weight="2.5"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_bcity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="乐清市"
                        android:textColor="#1261ce"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_barea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="乐清镇"
                        android:textColor="#626262"
                        android:textSize="10sp"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_new_wodecheyuan_cheyuanlist_xrv_item_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/arrow_standard_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_ecity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京市"
                        android:textColor="#1261ce"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_earea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通州区幸福北路"
                        android:textColor="#626262"
                        android:textSize="10sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设定时间:"
                    android:textColor="@color/gray"
                    android:textSize="10sp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-01-02 上午08:00~11:30"
                    android:textColor="@color/gray"
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f4f4f4"


                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"

                android:layout_weight="1.5"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >



                <TextView
                    android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_goodstype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/half_radius_blue_edge_shape"
                    android:text="八件货"
                    android:textSize="11sp"
                    android:textColor="@color/dodgerblue"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/half_radius_light_green_edge_shape"
                    android:text="2000km"
                    android:textSize="11sp"
                    android:textColor="#76bf0b"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lly_new_wodecheyuan_cheyuanlist_xrv_item_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    >
                <TextView
                    android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="删除"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/delete_black"
                    android:drawablePadding="5dp"
                    />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_marginRight="12.5dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1.5"
                >

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="2.5"
                android:layout_marginTop="5.5dp"
                >
                <RelativeLayout
                    android:id="@+id/rly_new_wodecheyuan_cheyuanlist_xrv_item_count"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/mine_cyhy_blue_bg"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共13条"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:layout_centerInParent="true"

                        />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1.5"
                android:layout_marginTop="0.5dp"

                >
                <LinearLayout
                    android:id="@+id/lly_new_wodecheyuan_cheyuanlist_xrv_item_update"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:id="@+id/tv_new_wodecheyuan_cheyuanlist_xrv_item_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="修改"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@mipmap/update_black"
                        android:drawablePadding="5dp"
                        />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        />



</LinearLayout>