<?xml version="1.0" encoding="utf-8"?>
<com.zhyan.shandiankuaiyunlib.Widget.ScrollerView.SpringScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:orientation="vertical"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="4.5"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_new_rz_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/rz_fail_gray_logo"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_new_rz_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="请尽快认证"
                android:textSize="20sp"

                android:textColor="@color/black"

                />
         <!--   <TextView
                android:id="@+id/tv_new_rz_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名认证未通过"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                />-->
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_marginTop="5dp"
        android:layout_weight="8"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1.5"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="实名认证"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="企业用户需上传法人证件照"
                android:textColor="@color/gray"
                android:textSize="10sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:background="@color/lightgray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="7">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                >
                <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundCornerImageView.RoundCornerImageView
                    android:id="@+id/rciv_new_rz_sm_p1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pic_add"
                    app:riv_corner_radius="10dip"
                    app:riv_oval="false"
                    />
                <ProgressBar
                    android:id="@+id/pb_new_rz_sm_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                >
                <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundCornerImageView.RoundCornerImageView
                    android:id="@+id/rciv_new_rz_sm_p2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/pic_add"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"
                    app:riv_oval="false" />
                <ProgressBar
                    android:id="@+id/pb_new_rz_sm_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                >
            <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundCornerImageView.RoundCornerImageView
                android:id="@+id/rciv_new_rz_sm_p3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/pic_add"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dip"
                app:riv_oval="false"
                />
                <ProgressBar
                    android:id="@+id/pb_new_rz_sm_p3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="身份证正反面图和手持身份证露脸图"
                android:textColor="@color/gray"
                android:textSize="10sp"

                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"

        android:layout_weight="8"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1.5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业认证"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人用户无须上传"
                android:textColor="@color/gray"
                android:textSize="11sp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgray"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="7"
            >
            <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundCornerImageView.RoundCornerImageView
                android:id="@+id/rciv_new_rz_qy_p1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"

                android:src="@mipmap/pic_add"
                app:riv_corner_radius="10dip"
                app:riv_oval="false"
                android:visibility="gone"
                 />
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                >

            <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundCornerImageView.RoundCornerImageView
                android:id="@+id/rciv_new_rz_qy_p2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/pic_add"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dip"
                app:riv_oval="false"

                 />
                <ProgressBar
                    android:id="@+id/pb_new_rz_qy_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundCornerImageView.RoundCornerImageView
                android:id="@+id/rciv_new_rz_qy_p3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/pic_add"
                app:riv_corner_radius="10dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="营业执照图，复印件无效"
                android:textColor="@color/gray"
                android:textSize="10sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"

        android:layout_weight="8"

        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_weight="1"
            android:layout_marginRight="2.5dp"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1.5"

                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="驾驶证"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/lightgray"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="7">
                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        >
                    <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundCornerImageView.RoundCornerImageView
                        android:id="@+id/rciv_new_rz_jsz"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/pic_add"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="10dip" />
                        <ProgressBar
                            android:id="@+id/pb_new_rz_jsz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="驾驶证完整图，复印件无效"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_weight="1"
            android:layout_marginLeft="2.5dp"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1.5"

                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行驶证认证"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/lightgray"
                    android:layout_marginRight="30dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="7"
                    >
                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        >
                        <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundCornerImageView.RoundCornerImageView
                            android:id="@+id/rciv_new_rz_xsz"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/pic_add"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="10dip"
                            />
                        <ProgressBar
                            android:id="@+id/pb_new_rz_xsz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行驶证完整图，复印件无效"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="4"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闪电承诺"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/shandian_promise_red_shape"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闪电用户必须都是实名加入,我们承诺不泄露用户任何信息"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="3"
        >
        <Button
            android:id="@+id/bt_new_rz_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@mipmap/mine_rz_blue_bg_submit"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    </LinearLayout>
        <ProgressBar
            android:id="@+id/pb_new_rz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:alpha="0.5"
            android:layout_centerInParent="true"
            android:visibility="gone"

            />
    </RelativeLayout>
</com.zhyan.shandiankuaiyunlib.Widget.ScrollerView.SpringScrollView>