<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/rly_dialog_release_che_huo_root"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:background="@mipmap/release_top_round_blue_bg"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择货物类型"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="4.05"
            android:orientation="vertical"
            android:background="@drawable/dialog_bottom_radius_top_right_angle_white_shape"
            >
            <RelativeLayout
                android:id="@+id/rly_dialog_huoyuanlist_type_tc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_dialog_che_tc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同城货源"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"

                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_height_or_width"
                android:background="@color/lightgray"
                />
            <RelativeLayout
                android:id="@+id/rly_dialog_huoyuanlist_type_ct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_dialog_che_ct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                     android:text="长途货源"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"

                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_height_or_width"
                android:background="@color/lightgray"
                />
            <RelativeLayout
                android:id="@+id/rly_dialog_huoyuanlist_type_tz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_dialog_che_tz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="特种货源"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"

                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_height_or_width"
                android:background="@color/lightgray"
                />
            <RelativeLayout
                android:id="@+id/rly_dialog_huoyuanlist_type_zx"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_dialog_che_zx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="专线货源"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"

                    />
            </RelativeLayout>




        </LinearLayout>


    </LinearLayout>


</RelativeLayout>