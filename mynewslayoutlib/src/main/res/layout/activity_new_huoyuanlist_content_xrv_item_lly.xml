<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/lly_new_huoyuanlist_item"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1.5"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    >



                <TextView
                    android:id="@+id/tv_new_huoyuanlist_hz_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胡小姐"
                    android:textColor="@color/gray"
                    android:textSize="11sp"

                    />

                <TextView
                    android:id="@+id/tv_new_huoyuanlist_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刚刚"
                    android:textColor="@color/gray"
                    android:textSize="11sp"
                   android:layout_marginLeft="5dp"
                    />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:orientation="horizontal"

                android:layout_weight="2"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_new_huoyuanlist_bcity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="乐清市"
                        android:textColor="#1261ce"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/tv_new_huoyuanlist_barea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="乐成镇"
                        android:textColor="#626262"
                        android:textSize="11sp"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/arrow_standard_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_new_huoyuanlist_ecity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京市"
                        android:textColor="#1261ce"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/tv_new_huoyuanlist_earea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通州区幸福北路"
                        android:textColor="#626262"
                        android:textSize="11sp"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设定时间:"
                    android:textColor="@color/gray"
                    android:textSize="10sp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_new_huoyuanlist_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-01-02 上午08:00~11:30"
                    android:textColor="@color/gray"
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_new_huoyuanlist_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/half_radius_light_green_edge_shape"
                    android:text="6箱"
                    android:textSize="10sp"
                    android:textColor="#76bf0b"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_new_huoyuanlist_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/half_radius_light_green_edge_shape"
                    android:text="电器产品"
                    android:textSize="10sp"
                    android:textColor="#76bf0b"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/tv_new_huoyuanlist_tiji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/half_radius_light_green_edge_shape"
                    android:text="0.00m³"
                    android:textSize="10sp"
                    android:textColor="#76bf0b"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/tv_new_huoyuanlist_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/half_radius_light_green_edge_shape"
                    android:text="0.0kg"
                    android:textSize="10sp"
                    android:textColor="#76bf0b"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f4f4f4"


                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:orientation="horizontal"
                android:layout_weight="1.5"
                >

               <!-- <TextView
                    android:id="@+id/tv_new_huoyuanlist_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看路线"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_new_huoyuanlist_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员等级"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"

                        android:layout_gravity="center_vertical"
                        />

                    <ImageView
                        android:id="@+id/iv_new_huoyuanlist_level1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/star"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/iv_new_huoyuanlist_level2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/star"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/iv_new_huoyuanlist_level3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/star"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/iv_new_huoyuanlist_level4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/star"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/iv_new_huoyuanlist_level5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/star"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>



                <TextView
                    android:id="@+id/tv_new_huoyuanlist_bj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击报价"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
                <!--
                <TextView
                    android:id="@+id/tv_new_huoyuanlist_huotype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/half_radius_blue_edge_shape"
                    android:text="八件货"
                    android:textSize="11sp"
                    android:textColor="@color/dodgerblue"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_new_huoyuanlist_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/half_radius_light_green_edge_shape"
                    android:text="2000km"
                    android:textSize="11sp"
                    android:textColor="#76bf0b"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:id="@+id/tv_new_huoyuanlist_ads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/half_radius_light_gray_edge_shape"
                    android:text="广告"
                    android:textSize="11sp"
                    android:textColor="@color/lightgray"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    />-->
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:layout_marginRight="12.5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="4.5"
                    android:layout_marginTop="1.5dp"
                    >



                <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundCornerImageView.RoundCornerImageView
                    android:id="@+id/rciv_new_huoyuanlist_touxiang"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:src="@color/green"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    app:riv_corner_radius="10dip"
                    app:riv_oval="false"
                    />
                </RelativeLayout>
                <com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundImageView

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/gray_round_shape"
                    android:visibility="gone"
                    >


                </com.zhyan.shandiankuaiyunlib.Widget.ImageView.RoundImageView>
                <TextView
                    android:id="@+id/tv_new_huoyuanlist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赵德汗"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"

                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#f4f4f4"
                   android:layout_marginTop="0.5dp"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1.5"
                    >



                <ImageView
                    android:id="@+id/iv_new_huoyuanlist_cal"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/cal_tel"
                    android:layout_centerInParent="true"
                    />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"

        />

        <RelativeLayout
            android:id="@+id/rly_new_huoyuanlist_ads"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/iv_new_huoyuanlist_ads"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:background="@color/red"
                />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>